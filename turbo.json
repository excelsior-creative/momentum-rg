{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalEnv": [
    "DATABASE_URL",
    "PAYLOAD_SECRET",
    "ADMIN_EMAIL",
    "ADMIN_PASSWORD",
    "RESEND_API_KEY",
    "CONTACT_EMAIL",
    "FROM_EMAIL",
    "CRON_SECRET",
    "BLOB_READ_WRITE_TOKEN",
    "RECAPTCHA_SECRET_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "type-check": {
      "dependsOn": [],
      "cache": true
    },
    "seed": {
      "cache": false
    }
  }
}